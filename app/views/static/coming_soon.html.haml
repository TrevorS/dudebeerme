.row
  .hero-unit
    .row
      .span3
        = image_tag 'beer-mug.png'

      .offset1.span5.sign-up
        %h1.hero-title dudebeer.me
        %p.hero-subtitle A social homebrewing recipe repository.

        .center
          = form_for @interested_brewer, html: { class:'form-inline' } do |f|
            = f.text_field :email, placeholder:"Enter your email here", class: 'interested-email'
            = f.submit "I'm interested!", class: 'btn btn-warning'

  .row.features
